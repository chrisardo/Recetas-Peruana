<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="3dp"
        android:layout_margin="1dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:background="#E91E63"
            android:weightSum="5.5"
            android:layout_height="185dp"
            android:orientation="vertical"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/imaView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="centerCrop"
                android:padding="1dp"
                android:src="@drawable/chichajora"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:weightSum="2"
                android:layout_weight="1.5">
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_weight="1.3"
                    android:padding="6dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Pie de limon peruano"
                        android:textSize="18dp"
                        android:maxLines="1"
                        android:textColor="#FFEB3B"
                        android:textStyle="bold|italic"
                        android:id="@+id/txtView"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="8 personas"
                            android:drawableLeft="@drawable/ic_people_black_24dp"
                            android:textSize="12dp"
                            android:textStyle="bold|italic"
                            android:maxLines="1"
                            android:textColor="#fff"
                            android:id="@+id/textView2"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="45m"
                            android:drawableLeft="@drawable/ic_access_time_black_24dp"
                            android:textSize="12dp"
                            android:layout_marginLeft="6dp"
                            android:textStyle="bold|italic"
                            android:maxLines="1"
                            android:textColor="#fff"
                            android:id="@+id/textView3"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="postre"
                            android:drawableLeft="@drawable/ic_restaurant_black_24dp"
                            android:textSize="12dp"
                            android:layout_marginLeft="6dp"
                            android:textStyle="bold|italic"
                            android:maxLines="1"
                            android:textColor="#fff"
                            android:id="@+id/textView4"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="8 personas"
                        android:drawableLeft="@drawable/ic_people_black_24dp"
                        android:textSize="12dp"
                        android:textStyle="bold|italic"
                        android:maxLines="1"
                        android:layout_marginTop="30dp"
                        android:id="@+id/textView5"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="8 personas"
                        android:drawableLeft="@drawable/ic_people_black_24dp"
                        android:textSize="12dp"
                        android:textStyle="bold|italic"
                        android:maxLines="1"
                        android:layout_marginLeft="60dp"
                        android:id="@+id/tvPrepara"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="8 personas"
                        android:drawableLeft="@drawable/ic_people_black_24dp"
                        android:textSize="12dp"
                        android:textStyle="bold|italic"
                        android:maxLines="1"
                        android:layout_marginLeft="60dp"
                        android:id="@+id/tvUrl"
                        android:layout_height="match_parent"/>
                    <!--<ImageView
                        android:src="@drawable/ic_delete_forever_black_24dp"
                        android:id="@+id/btnEliminar"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>-->
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6">
                    <Button
                        android:background="@drawable/ic_favorite"
                        android:id="@+id/btnAgregar"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>