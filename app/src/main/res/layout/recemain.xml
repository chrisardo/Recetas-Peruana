<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="185dp"
            android:orientation="vertical"
            android:weightSum="4.5">
            <ImageView
                android:id="@+id/imaView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chichajora" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_weight="1.5"
                android:weightSum="2">
                <LinearLayout
                    android:background="#F44336"
                    android:layout_width="180dp"
                    android:layout_height="55dp"
                    android:layout_weight="1.1"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Pie de limon peruano"
                        android:textColor="#FFEB3B"
                        android:textSize="18dp"
                        android:textStyle="bold|italic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/personas"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_people_black_24dp"
                            android:maxLines="1"
                            android:text="8 personas"
                            android:textColor="#fff"
                            android:textSize="11dp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/tiempo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/ic_access_time_black_24dp"
                            android:maxLines="1"
                            android:text="45m"
                            android:textColor="#fff"
                            android:textSize="11dp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:drawableLeft="@drawable/ic_restaurant_black_24dp"
                        android:maxLines="1"
                        android:text="postre"
                        android:textColor="#fff"
                        android:textSize="11dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/tingrediente"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:drawableLeft="@drawable/ic_people_black_24dp"
                        android:maxLines="1"
                        android:text="8 personas"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/tpreparacion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60dp"
                        android:drawableLeft="@drawable/ic_people_black_24dp"
                        android:maxLines="1"
                        android:text="8 personas"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/tvUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60dp"
                        android:drawableLeft="@drawable/ic_people_black_24dp"
                        android:maxLines="1"
                        android:text="8 personas"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>