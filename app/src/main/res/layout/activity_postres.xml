<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostresActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#E91E63"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnIcoAtras"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:onClick="atras"
            android:background="#E91E63"
            android:src="@drawable/ic_atras" />
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolboar"
            android:layout_width="match_parent"
            android:theme="@style/ToolBar"
            android:layout_marginStart="-15dp"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:id="@+id/idLayoutFondo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp">
                <ImageView
                    android:id="@+id/im"
                    android:layout_width="60dp"
                    android:layout_height="49dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/logosa" />

                <TextView
                    android:id="@+id/nivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:textStyle="bold|italic" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="8">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCategory"
            app:cardBackgroundColor="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageCategoryBg"
                    android:src="@drawable/sample_image_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="#E2FFC107"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/imageCategory"
                    android:layout_width="80dp"
                    android:src="@drawable/sample_image_category"
                    android:scaleType="fitStart"
                    android:padding="16dp"
                    android:layout_height="160dp"/>
                <TextView
                    android:id="@+id/textCategory"
                    android:layout_toRightOf="@id/imageCategory"
                    android:layout_toEndOf="@id/imageCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="7"
                    android:ellipsize="end"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold|italic"
                    android:text="RECETAS DE POSTRES"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/textCategory2"
                    android:layout_toRightOf="@id/imageCategory"
                    android:layout_toEndOf="@id/imageCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="7"
                    android:layout_below="@id/textCategory"
                    android:ellipsize="end"
                    android:textColor="#fff"
                    android:text="@string/defposte"
                    android:padding="1dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>